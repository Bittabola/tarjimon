# Tarjimon Bot Environment Variables
# Copy this file to .env and fill in your values

# Required
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL_NAME=gemini-2.0-flash
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_SECRET=generate_a_random_secret_string

# Optional - YouTube transcripts
SUPADATA_API_KEY=your_supadata_api_key

# Optional - Admin dashboard
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password

# Optional - Database and logs (defaults shown)
TARJIMON_DB_PATH=data/sqlite_data
TARJIMON_LOG_PATH=logs

# Optional - Feedback system
FEEDBACK_BOT_TOKEN=separate_bot_token_for_feedback
FEEDBACK_ADMIN_ID=your_telegram_user_id
